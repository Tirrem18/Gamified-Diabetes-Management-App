<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_marginTop="60dp"
    android:background="?attr/android:windowBackground"
    tools:context=".ui.streaks.StreaksFragment">

    <!-- Current Streak -->
    <TextView
        android:id="@+id/text_current_streak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Current Streak: 0"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="?attr/android:textColorPrimary"
        android:paddingBottom="8dp"/>

    <!-- Highest Streak -->
    <TextView
        android:id="@+id/text_highest_streak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Highest Streak: 0"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="?attr/android:textColorPrimary"
        android:paddingBottom="40dp"/>

    <!-- Coin Multiplier Progress -->
    <TextView
        android:id="@+id/text_multiplier_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Current Multiplier Progress: x1"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="?attr/android:textColorPrimary"
        android:paddingBottom="8dp"/>

    <ProgressBar
        android:id="@+id/progress_multiplier"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:max="100"
        android:progress="0"
        android:progressTint="?attr/colorPrimary"
        android:backgroundTint="?attr/colorPrimaryVariant"
        android:paddingBottom="8dp"/>

    <!-- Multiplier Explanation -->
    <TextView
        android:id="@+id/text_multiplier_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(The higher your streak, the higher your coin multiplier)"
        android:textSize="14sp"
        android:textColor="?attr/android:textColorSecondary"
        android:paddingBottom="30dp"/>

    <!-- Milestone Rewards -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Milestones"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="?attr/android:textColorPrimary"
        android:paddingBottom="12dp"/>

    <Button
        android:id="@+id/btn_claim_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Claim 15 Coins - 3 Days"
        android:textColor="?attr/colorOnPrimary"
        android:backgroundTint="?attr/colorPrimary"
        android:enabled="false"
        android:padding="8dp"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btn_claim_7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Claim 50 Coins - 7 Days"
        android:textColor="?attr/colorOnPrimary"
        android:backgroundTint="?attr/colorPrimary"
        android:enabled="false"
        android:padding="8dp"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btn_claim_14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Claim 50 Coins - 14 Days"
        android:textColor="?attr/colorOnPrimary"
        android:backgroundTint="?attr/colorPrimary"
        android:enabled="false"
        android:padding="8dp"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btn_claim_30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Claim 200 Coins - 30 Days"
        android:textColor="?attr/colorOnPrimary"
        android:backgroundTint="?attr/colorPrimary"
        android:enabled="false"
        android:padding="8dp"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btn_claim_90"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Claim 500 Coins - 90 Days"
        android:textColor="?attr/colorOnPrimary"
        android:backgroundTint="?attr/colorPrimary"
        android:enabled="false"
        android:padding="8dp"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btn_claim_365"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Claim 1000 Coins - 365 Days"
        android:textColor="?attr/colorOnPrimary"
        android:backgroundTint="?attr/colorPrimary"
        android:enabled="false"
        android:padding="8dp"
        android:layout_marginBottom="40dp"/>

    <!-- Streak Tip at the Bottom -->
    <TextView
        android:id="@+id/text_streak_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tip: Stay consistent! Small habits lead to big changes."
        android:textSize="14sp"
        android:textStyle="italic"
        android:textColor="?attr/android:textColorSecondary"
        android:gravity="center"
        android:paddingTop="20dp"/>
</LinearLayout>
