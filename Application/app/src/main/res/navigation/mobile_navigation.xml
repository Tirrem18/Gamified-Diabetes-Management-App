<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/navigation_home">

    <!-- Top Navigation Destinations -->
    <fragment
        android:id="@+id/navigation_coins"
        android:name="com.b1097780.glucohub.ui.coins.CoinsFragment"
        android:label="Coins"
        tools:layout="@layout/fragment_coins" />

    <fragment
        android:id="@+id/navigation_streaks"
        android:name="com.b1097780.glucohub.ui.streaks.StreaksFragment"
        android:label="Streaks"
        tools:layout="@layout/fragment_streaks" />

    <!-- Bottom Navigation Destinations -->
    <fragment
        android:id="@+id/navigation_home"
        android:name="com.b1097780.glucohub.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_glucose"
        android:name="com.b1097780.glucohub.ui.glucose.GlucoseFragment"
        android:label="Glucose"
        tools:layout="@layout/fragment_glucose" />

    <fragment
        android:id="@+id/navigation_planner"
        android:name="com.b1097780.glucohub.ui.planner.PlannerFragment"
        android:label="Notifications"
        tools:layout="@layout/fragment_planner" />

    <fragment
        android:id="@+id/navigation_data"
        android:name="com.b1097780.glucohub.ui.data.DataFragment"
        android:label="Data"
        tools:layout="@layout/fragment_data" />

    <!-- Drawer Item (Settings) -->
    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.b1097780.glucohub.ui.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.b1097780.glucohub.ui.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />
</navigation>
