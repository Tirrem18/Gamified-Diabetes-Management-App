<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Black Outline -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#000000" /> <!-- Black outline -->
            <corners android:radius="16dp" /> <!-- Rounded corners -->
        </shape>
    </item>
    <!-- Inner Background -->
    <item android:top="2dp" android:bottom="2dp" android:left="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorPrimary" /> <!-- Use the theme's primary color -->
            <corners android:radius="16dp" /> <!-- Rounded corners -->
        </shape>
    </item>
</layer-list>